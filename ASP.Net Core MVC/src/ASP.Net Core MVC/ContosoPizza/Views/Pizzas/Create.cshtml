@model ContosoPizza.Models.Pizza

@{
    ViewData["Title"] = "Create Pizza";
}

<h2>Create a New Pizza</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Size" class="control-label"></label>
        <select asp-for="Size" class="form-control">
            <option value="Small">Small</option>
            <option value="Medium">Medium</option>
            <option value="Large">Large</option>
        </select>
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="IsGlutenFree" class="form-check-input" type="checkbox" />
        <label asp-for="IsGlutenFree" class="form-check-label">Gluten Free</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
